#: import main student
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton

Student:

<Student>:
    orientation: "vertical"
    first_name: first_name_input
    last_name: last_name_input
    birth_date: bd_input
    puppy_name: pn_input
    student_list: student_list_view
    padding: 10
    spacing: 10

    BoxLayout:
        size_hint_y: None
        height: "40dp"

        Label:
            text: "First Name"
        TextInput:
            id: first_name_input

        Label:
            text: "Last Name"
        TextInput:
            id: last_name_input

        Label:
            text: "Birth Date"
        TextInput:
            id: bd_input

        Label:
            text: "Puppy Name"
        TextInput:
            id: pn_input


    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Submit"
            size_hint_x: 15
            on_press: root.submit_students()

        Button:
            text: "Delete"
            size_hint_x: 15
            on_press: root.delete_students()

        Button:
            text: "Replace"
            size_hint_x: 15
            on_press: root.replace_students()


    ListView:
        id: student_list_view
        adapter:
            ListAdapter(data=["Diogo Berti"], cls=main.StudentListButton)






